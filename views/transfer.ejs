<%- include("partials/header") %>
<div class="transfer-header">
    <h1>Transfer to : </h1>
</div>
<div class="container">
<table class="table table-dark table-striped">
    <thead>
        <tr class="header1" >
           <th scope="col">Customer Name</th>
			<th scope="col">Emails</th>
			<th scope="col">Credits</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% for(let current of users){ %>

        <% if(!user._id.equals(current._id)){ %>
            <tr class ="header2">
                <td><%= current.name %></td>
                <td><%= current.email%></td>
                <td><%= current.credits%></td>
	  <td><button class="select-btn"><a href="/view/<%= user._id %>/<%= 
	     current._id %>">Transfer</a></button></td>
            </tr>
        <% } %>

    <% } %>
    </tbody>
    </table>    
</div>
</div>


<%- include("partials/footer") %>


