<%- include("partials/header") %>

<h1 class="view-header">Customer Details</h1>


<div class="container">
  
	<table class="table table-dark table-striped">
		<thead>
		  <tr>
			<th scope="col">Customer Name</th>
			<th scope="col">Emails</th>
			<th scope="col">Credits</th>
			<th scope="col">Transfer</th>
		  </tr>
		</thead>
		<tbody>
			<% for(let user of users){ %>
		  <tr>
			<!-- <th scope="row">1</th> -->
			<td><%= user.name %></td>
			<td><%= user.email%></td>
			<td><%= user.credits%></td>
			<td><button class="select-btn"><a href="/view/<%= user._id %>">Select</a>
			</button></td>
		</tr>
		  <% } %>
		</tbody>
	  </table>


            
        
<%- include("partials/footer") %>
